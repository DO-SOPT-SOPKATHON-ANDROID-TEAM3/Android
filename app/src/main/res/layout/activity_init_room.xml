<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.InitRoomActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_make_room"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="방 생성하기"
        android:paddingVertical="14dp"
        android:layout_marginHorizontal="16dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:background="@drawable/shape_gray_line_5_rect"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/pretendard_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_enter_room"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_enter_room"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="방 입장하기"
        android:paddingVertical="14dp"
        android:layout_marginHorizontal="16dp"
        android:textColor="@color/white"
        android:layout_marginBottom="20dp"
        android:textSize="16sp"
        android:background="@drawable/shape_gray_line_5_rect"
        android:backgroundTint="@color/black"
        android:fontFamily="@font/pretendard_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>