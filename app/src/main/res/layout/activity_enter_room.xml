<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.enterRoom.EnterRoomActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_slot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_left_arrow_whit_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="방 입장하기"
            android:textAppearance="?textAppearanceTitleLarge"
            android:textColor="@color/black" />
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/tv_room_invite_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/pretendard_medium"
        android:text="초대코드"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tb_slot" />

    <EditText
        android:id="@+id/ev_room_invite_code_1"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/shape_gray_line_10_rect"
        android:gravity="center"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:maxLength="1"
        android:nextFocusDown="@id/ev_room_invite_code_2"
        android:padding="11dp"
        android:textSize="22sp"
        app:layout_constraintEnd_toStartOf="@id/ev_room_invite_code_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_room_invite_title" />


    <EditText
        android:id="@+id/ev_room_invite_code_2"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/shape_gray_line_10_rect"
        android:gravity="center"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:maxLength="1"
        android:nextFocusDown="@id/ev_room_invite_code_3"
        android:padding="11dp"
        android:textSize="22sp"
        app:layout_constraintEnd_toStartOf="@id/ev_room_invite_code_3"
        app:layout_constraintStart_toEndOf="@id/ev_room_invite_code_1"
        app:layout_constraintTop_toBottomOf="@id/tv_room_invite_title" />


    <EditText
        android:id="@+id/ev_room_invite_code_3"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/shape_gray_line_10_rect"
        android:gravity="center"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:maxLength="1"
        android:nextFocusDown="@id/ev_room_invite_code_4"
        android:padding="11dp"
        android:textSize="22sp"
        app:layout_constraintEnd_toStartOf="@id/ev_room_invite_code_4"
        app:layout_constraintStart_toEndOf="@id/ev_room_invite_code_2"
        app:layout_constraintTop_toBottomOf="@id/tv_room_invite_title" />


    <EditText
        android:id="@+id/ev_room_invite_code_4"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/shape_gray_line_10_rect"
        android:gravity="center"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:maxLength="1"
        android:nextFocusDown="@id/ev_room_invite_code_5"
        android:padding="11dp"
        android:textSize="22sp"
        app:layout_constraintEnd_toStartOf="@id/ev_room_invite_code_5"
        app:layout_constraintStart_toEndOf="@id/ev_room_invite_code_3"
        app:layout_constraintTop_toBottomOf="@id/tv_room_invite_title" />


    <EditText
        android:id="@+id/ev_room_invite_code_5"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/shape_gray_line_10_rect"
        android:gravity="center"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:maxLength="1"
        android:nextFocusDown="@id/ev_room_invite_code_6"
        android:padding="11dp"
        android:textSize="22sp"
        app:layout_constraintEnd_toStartOf="@id/ev_room_invite_code_6"
        app:layout_constraintStart_toEndOf="@id/ev_room_invite_code_4"
        app:layout_constraintTop_toBottomOf="@id/tv_room_invite_title" />


    <EditText
        android:id="@+id/ev_room_invite_code_6"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/shape_gray_line_10_rect"
        android:gravity="center"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:maxLength="1"
        android:padding="11dp"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ev_room_invite_code_5"
        app:layout_constraintTop_toBottomOf="@id/tv_room_invite_title" />


    <TextView
        android:id="@+id/tv_room_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/pretendard_medium"
        android:text="이름"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ev_room_invite_code_6" />

    <EditText
        android:id="@+id/et_room_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/shape_gray_line_10_rect"
        android:hint="이름을 입력하세요"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:maxLines="1"
        android:padding="11dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_room_name" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_enter_room"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/shape_gray_line_10_rect"
        android:backgroundTint="#E93636"
        android:fontFamily="@font/pretendard_medium"
        android:gravity="center"
        android:paddingVertical="14dp"
        android:text="입장하기"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>